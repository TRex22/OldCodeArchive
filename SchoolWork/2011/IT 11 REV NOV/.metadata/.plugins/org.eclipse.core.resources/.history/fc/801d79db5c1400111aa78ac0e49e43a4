	public double calcPay (int hMonth)
	{
		double pay = 0.00;
		if (hWork >= hMonth)
		{
			int hOver = hWork-hMonth;

			pay = (hMonth*hSalary)+(hOver*(2*hSalary));

		}
		else if (hWork<hMonth)
		{
			pay = (hWorked*hSalary);
		}




		return pay;
	}







