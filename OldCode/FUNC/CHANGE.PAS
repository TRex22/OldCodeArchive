Function change_2_num : string;
type nums = 1..26;

var ch : char;
    num : nums;

        Function change(fch:char):nums;
        begin
             change := ord(fch) - 64;
        end;

begin {main}

      write( 'Enter Character or word or sentence: ');
      readln(ch);
      ch := upcase(ch);
      num := change(ch);
      writeln(ch,' is letter no. ',num);
      readln;

end;

